doctype html
html
    head
        title Demo-Express
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/styles.css')
    body
        nav.navbar.navbar-expand.bg-dark
            .container-fluid
                .navbar-header
                    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Demo-Express
                #navbarCollapse.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-md-0
                        li.nav-item
                            a.nav-link(href='/') Home
                        li.nav-item
                            a.nav-link(href='/articles/add') Add Article
                    ul.nav.nav-navbar.navbar-right
                        if user
                            li.nav-item
                                a(href='/users/logout') Logout
                        else
                            li.nav-item
                                a.nav-link(href='/users/login') Login
                            li.nav-item
                                a.nav-link(href='/users/register') Sign Up

        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{errors[i].msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2022
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')